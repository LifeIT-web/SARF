<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="replyMapper">

	<!-- 댓글 작성 -->
	<insert id="writeReply">
	INSERT INTO F_BOARD_R(
							BNO,
							RNO,
							NAME,
							CONTENT
									)
				VALUES(		#{bno},
							SEQ_F_BOARD_R.NEXTVAL,
							#{name},
							#{content} )
	</insert>

</mapper>