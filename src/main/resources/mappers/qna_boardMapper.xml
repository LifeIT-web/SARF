<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qna_boardMapper">

	<!-- 게시판 목록 조회 -->

	<select id="list" resultType="com.sarf.vo.Qna_BoardVO">
	   SELECT *	FROM QNA_BOARD
			ORDER BY BNO DESC
	</select>

	<!-- 게시판 글 작성 -->
 	<insert id="write" >
		INSERT INTO QNA_BOARD(BNO, NAME, SUBJECT, CONTENT, REGDATE, ANS)
		VALUES(QNA_BOARD_SEQ.NEXTVAL, #{name}, #{subject}, #{content}, sysdate, 0)
	</insert> 

	<!-- 게시물 조회 -->
 	<select id="read" parameterType="int" resultType="com.sarf.vo.Qna_BoardVO">
		SELECT	BNO
			  , SUBJECT
			  , CONTENT
			  , NAME
			  , REGDATE
			  , ANS
		 FROM QNA_BOARD
		 WHERE BNO = #{bno}
	</select>

	<!-- 게시물 수정 -->
 	<update id="update" parameterType="com.sarf.vo.Qna_BoardVO">
		UPDATE QNA_BOARD
		   SET SUBJECT = #{subject},
		   	   CONTENT = #{content}
		 WHERE BNO = #{bno} 
	</update>
	
	<!-- 게시물 삭제 -->
 	<delete id="delete" parameterType="int">
		DELETE 
		  FROM QNA_BOARD
		 WHERE BNO = #{bno}
	</delete>
	
	<!-- 게시판 페이지 -->
	<select id="listPage" resultType="com.sarf.vo.Qna_BoardVO" parameterType="com.sarf.vo.SearchCriteria">
		SELECT  BNO, 
		        SUBJECT	, 
		        CONTENT,
		        NAME, 
		        REGDATE,
		 FROM ( 
		        SELECT BNO, 
		               SUBJECT, 
		               CONTENT, 
		               NAME, 
		               REGDATE, 
		               ROW_NUMBER() OVER(ORDER BY BNO DESC) AS RNUM
		         FROM QNA_BOARD
		         WHERE 1=1 
		         	<include refid="search"></include>
		                       ) MP
		WHERE RNUM BETWEEN #{rowStart} AND #{rowEnd}
		ORDER BY BNO DESC
	</select>
	
	<!-- 게시글 검색 -->
 	<select id="listCount" parameterType="com.sarf.vo.SearchCriteria" resultType="int">
		SELECT COUNT(BNO)
		   FROM QNA_BOARD
		   WHERE 1=1
		<include refid="search"></include>	
		   AND BNO > 0
	</select>
 	
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 's'.toString()">AND SUBJECT LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'c'.toString()">AND CONTENT LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'n'.toString()">AND NAME LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'sc'.toString()">AND (SUBJECT LIKE '%' || #{keyword} || '%') or (CONTENT LIKE '%' || #{keyword} || '%')</if>
		</if>
	</sql>

</mapper>













